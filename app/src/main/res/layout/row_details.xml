<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgMarvel"
        android:layout_width="150dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/app_name"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="@id/imgMarvel"
        app:layout_constraintTop_toBottomOf="@id/imgMarvel"
        app:layout_constraintStart_toStartOf="@id/imgMarvel"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imgMarvel"
        app:layout_constraintBottom_toBottomOf="@id/imgMarvel"
        app:layout_constraintEnd_toEndOf="@id/imgMarvel"
        app:layout_constraintStart_toStartOf="@id/imgMarvel"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>