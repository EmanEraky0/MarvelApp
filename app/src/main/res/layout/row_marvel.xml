<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgMarvel"
        android:src="@drawable/anamy"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="170dp"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_margin="30dp"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/muayan_background"
        android:textColor="@color/black"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@id/imgMarvel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imgMarvel"
        app:layout_constraintBottom_toBottomOf="@id/imgMarvel"
        app:layout_constraintEnd_toEndOf="@id/imgMarvel"
        app:layout_constraintStart_toStartOf="@id/imgMarvel"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>